{% do attributes.setAttribute('href', url) %}
{% do attributes.setAttribute('title', label) %}
{% do active_trail_pattern ? attributes.setAttribute('data-navigation-active-trail-pattern', active_trail_pattern) %}
{% do active_trail_pattern ? attributes.setAttribute('data-navigation-active-trail-class', 'author-page-navigation-item--active-trail') %}
{% do attributes.addClass('author-page-navigation-item') %}
{% embed 'laszlo:button' with {
  attributes,
  as_template: true,
  component: 'a',
  href: url,
  label,
  icon,
} only %}
  {% block start_icon %}
    {% include 'laszlo:icon' with {
      attributes: create_attribute({
        class: 'author-page-navigation-item__icon',
      }),
      icon,
    } only %}
  {% endblock %}

  {% block children %}
    <span class="author-page-navigation-item__label">{{ label }}</span>
  {% endblock %}
{% endembed %}