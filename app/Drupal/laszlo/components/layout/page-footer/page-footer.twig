{% do attributes.addClass('page-footer') %}
<footer{{ attributes }}>
  <div class="page-footer__legal">
    {% set license_url = 'https://creativecommons.org/licenses/by-sa/4.0/legalcode.ru' %}
    <div class="page-footer__license">
      {%- trans -%}
        The content is published under <a href="{{ license_url }}">CC-BY-SA 4.0</a> license.
      {%- endtrans -%}
    </div>

    <div class="page-footer__copyright">
      Â© {{ 'now'|date('Y') }} Niklan
    </div>
  </div>

  <div class="page-footer__extra">
    {% include 'laszlo:color-scheme' only %}

    <div class="page-footer__versions">
      {% include 'laszlo:version-link' with {
        label: 'Website version'|t,
        url: versions.website.source_url,
        version: versions.website.version,
      } only %}
      {% include 'laszlo:version-link' with {
        label: 'Content version'|t,
        url: versions.content.source_url,
        version: versions.content.version,
      } only %}
    </div>
  </div>
</footer>
