{% embed 'laszlo:lightbox' with {
  uri,
  size,
  responsive_image,
} only %}
  {% block thumbnail %}
    {% include 'laszlo:image' with {
      src: uri|image_style('paragraph_image_image_xs'),
      srcset: {
        '543w': uri|image_style('paragraph_image_image_xs'),
        '671w': uri|image_style('paragraph_image_image_sm'),
        '960w': uri|image_style('960xy'),
      }
    } only %}
  {% endblock %}
{% endembed %}