{
  "extends": "./../web/core/.eslintrc.json",
  "root": true,
  "ignorePatterns": [
    "assets/vendor/**/*",
    "config/sync/**/*",
    "var/**/*",
    "web/**/*",
    "vendor/**/*"
  ],
  "globals": {
    "ColorScheme": true,
    "AlpineOnce": true
  },
  "rules": {
    "prettier/prettier": "off",
    "valid-jsdoc": "off",
    "no-console": ["error", {"allow": ["warn", "error"]}],
    "jsdoc/require-param": "off",
    "jsdoc/check-tag-names": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2022
  }
}
