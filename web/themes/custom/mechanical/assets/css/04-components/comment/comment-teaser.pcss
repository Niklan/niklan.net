.comment-teaser {
  font-size: var(--font-size-sm);
  scroll-margin-top: var(--spacing-lg);
}

.comment-teaser__author {
  font-weight: bold;
}

.comment-teaser__created {
  --link-color: var(--color-gray-web);
  font-size: var(--font-size-xs);
  margin-left: var(--spacing-xxs);
}

.comment-teaser__content {
  --p-margin--y: var(--spacing-xs);
}

.comment-teaser__footer .links {
  display: flex;
  align-items: center;
  --link-color: var(--color-roman-silver);
  text-transform: lowercase;
}

.comment-teaser__footer .links__item:not(:first-child) {
  margin-left: var(--spacing-md);
}

.comment-teaser__commented-entity {
  --link-color: var(--color-roman-silver);
  display: block;
  margin-bottom: var(--spacing-xs);
  font-style: italic;
}
