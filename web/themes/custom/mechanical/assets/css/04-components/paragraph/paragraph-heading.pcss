.paragraph-heading {
  scroll-margin-top: var(--spacing-xl);
  --link-color: var(--color-old-silver);
}

.paragraph-heading__anchor {
  font-size: 80%;
  display: inline-block;
  margin-left: var(--spacing-xs);
  visibility: hidden;
}

.paragraph-heading:hover .paragraph-heading__anchor {
  visibility: visible;
}
