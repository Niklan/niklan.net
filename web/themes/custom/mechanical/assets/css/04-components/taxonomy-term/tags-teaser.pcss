.taxonomy-term-tags-teaser {
  border: 1px solid var(--color-border);
  padding: var(--spacing-sm);
  border-radius: var(--radius-xs);
  background-color: var(--navigation-background);
  --summary-color: var(--color-dark-silver);
}

[data-theme="dark"] .taxonomy-term-tags-teaser {
  --summary-color: var(--color-text);
}

.taxonomy-term-tags-teaser__title {
  display: block;
  font-weight: bold;
  --link-color: var(--heading-color);
}

.taxonomy-term-tags-teaser__summary {
  font-size: var(--font-size-xs);
  color: var(--summary-color);
}
